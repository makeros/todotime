{
  "name": "Timedoist",
  "productName": "Timedoist",
  "description": "Unofficial extension for todoist the handle task timeboxing.",
  "keywords": [
    "todoist",
    "timeboxing",
    "tasks"
  ],
  "main": "./app/main.js",
  "version": "0.0.1",
  "author": "arek czogala <mail@arekczogala.pl>",
  "scripts": {
    "start": "electron .",
    "test": "npm run test:unit",
    "test:unit": "jest ./app/src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "frontend:preferences:watch": "chokidar './app/frontend/src/**/*.elm' -c 'elm make app/frontend/src/Preferences.elm --output app/frontend/preferences.js'"
  },
  "build": {
    "appId": "com.timedoist.app",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "electron": "5.0.0-beta.7",
    "electron-builder": "^22.4.1",
    "elm": "^0.19.1-3",
    "jest": "^25.1.0",
    "standard": "^14.3.3"
  }
}
