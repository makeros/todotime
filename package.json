{
  "name": "Todotime",
  "productName": "Todotime",
  "description": "Unofficial extension for todoist the handle task timeboxing.",
  "keywords": [
    "todotime",
    "timeboxing",
    "tasks"
  ],
  "main": "./app/main.js",
  "version": "0.0.1",
  "author": "arek czogala <mail@arekczogala.pl>",
  "scripts": {
    "start": "electron .",
    "test": "npm run test:unit",
    "test:unit": "jest ./app/src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release-app": "npm run dist -- --publish",
    "frontend:preferences:watch": "chokidar './app/frontend/src/**/*.elm' -c 'elm make app/frontend/src/Preferences.elm --output app/frontend/preferences.js'"
  },
  "build": {
    "appId": "com.todotime.app",
    "nodeVersion": "12.16.1",
    "asar": true,
    "directories": {
      "buildResources": "buildResources"
    },
    "compression": "normal",
    "mac": {
      "target": "zip"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "electron": "5.0.0-beta.7",
    "electron-builder": "^22.4.1",
    "elm": "^0.19.1-3",
    "jest": "^25.1.0",
    "standard": "^14.3.3"
  }
}
